class Solution(object):
    def maxArea(self, height):
        """
        :type height: List[int]
        :rtype: int
        """
        n = len(height)
        l, r = 0, n - 1
        maxi = 0

        while l < r:
            curr = min(height[l], height[r]) * (r - l)
            maxi = max(maxi, curr)

            # Move the smaller height pointer
            if height[l] < height[r]:
                l += 1
            else:
                r -= 1

        return maxi
