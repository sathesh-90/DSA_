class Solution(object):
    def maxProduct(self, nums):
        cur_max = cur_min = max_prod = nums[0]

        for num in nums[1:]:
            if num < 0:
                cur_max, cur_min = cur_min, cur_max  # swap

            cur_max = max(num, cur_max * num)
            cur_min = min(num, cur_min * num)

            max_prod = max(max_prod, cur_max)

        return max_prod

  
